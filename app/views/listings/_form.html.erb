
<%= form_with(model: listing, local: true) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :listing_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :listing_description %>
  </div>
  <div class="field">
    <%= form.label :date %>
    <%= form.text_field :date, id: :listing_date %>
  </div>
  <div class="field">
    <%= form.label :cost %>
    <%= form.text_field :cost, id: :listing_cost %>
  </div>

 

  <div class="field">
    Image
    <%= form.file_field :image %>
  </div>

  <div class="field">
  <%= form.label :itinerary %>
  <%= form.text_area :itinerary, id: :listing_itinerary %>
</div>


 

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
