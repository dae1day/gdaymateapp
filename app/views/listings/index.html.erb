
<p id="notice"><%= notice %></p>
<div class="container">
<h1>Listings</h1>

<% @listings.each do |listing| %>


    <div class="tour-section">
      <div class ="row tour-title">
          <div class="col-md-6">
            <h1> <%= listing.title %> </h1>
          </div>

          <div class="col-md-6">
            <h1> <%= listing.title %> </h1>
          </div>

      </div>

      <div class="row tour-info">  
          <div class="col-md-6 col-sm-12 tour-image-box">
            <img class="tour-image" src="<%= listing.image %>" alt="user display picture">
          </div>


          <div class="col-md-6 col-sm-12 tour-info-box">
          
              <div>

                <p>Languages: English, French</p>
                <p>Interest: Birdwatching</p>
                <p>Date: <%= listing.date %></p>
                <p>Cost: $<%= listing.cost %></p>
                
                  <button type="button" class="btn btn-dark"><%= link_to 'Details', listing %></button>
                

              </div>

          </div>


      </div>

    </div>

    <% end %>







<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Cost</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.description %></td>
        <td><%= listing.cost %></td>
        <td><%= listing.image %></td>
        <td><%= listing.user.id %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>

</div>